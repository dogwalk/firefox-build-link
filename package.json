{
  "name": "firefox-build-link-plain",
  "description": "A basic add-on",
  "version": "0.0.1",
  "author": {
    "name": "sanemat",
    "email": "o.gata.ken@gmail.com",
    "url": "sane.jp"
  },
  "devDependencies": {
    "conventional-changelog": "^0.5.3",
    "cross-spawn-async": "^2.1.8",
    "eclint": "^1.1.5",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^4.0.0",
    "fixpack": "^2.2.0",
    "globstar": "^1.0.0",
    "jpm": "^1.0.4",
    "pify": "^2.3.0",
    "rimraf": "^2.5.1"
  },
  "engines": {
    "firefox": ">=38.0a1",
    "fennec": ">=38.0a1"
  },
  "keywords": [
    "jetpack"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": "dogwalk/firefox-build-link-plain",
  "scripts": {
    "build:clean": "bin/clean.js",
    "build:copy": "bin/copy.js",
    "build:pack": "bin/pack.js",
    "changelog": "conventional-changelog -i changelog.md --overwrite --preset angular",
    "eclint": "globstar --ignore \"node_modules/**\" -- eclint check \"*.{js,yml,md,json}\"",
    "eslint": "eslint --ext .js data test index.js bin",
    "fixpack": "fixpack",
    "git:tag": "git tag v${npm_package_version}",
    "lint": "npm run eclint && npm run eslint",
    "start": "jpm run",
    "test": "jpm test",
    "verify": "npm run lint && npm run test",
    "xpi": "jpm xpi"
  },
  "title": "Build Link Plain"
}
