{
  "name": "firefox-build-link-plain",
  "description": "A basic add-on",
  "version": "0.0.1",
  "author": "sanemat",
  "devDependencies": {
    "conventional-changelog": "^0.5.3",
    "eclint": "^1.1.5",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^4.0.0",
    "fixpack": "^2.2.0",
    "globstar": "^1.0.0",
    "jpm": "^1.0.4"
  },
  "engines": {
    "firefox": ">=38.0a1",
    "fennec": ">=38.0a1"
  },
  "keywords": [
    "jetpack"
  ],
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "changelog": "conventional-changelog -i changelog.md --overwrite --preset angular",
    "eclint": "globstar --ignore \"node_modules/**\" -- eclint check \"*.{js,yml,md,json}\"",
    "eslint": "eslint --ext .js data test index.js",
    "fixpack": "fixpack",
    "lint": "npm run eclint && npm run eslint",
    "start": "jpm run",
    "test": "jpm test",
    "verify": "npm run lint && npm run test"
  },
  "title": "Build Link Plain"
}
