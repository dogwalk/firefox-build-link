{
  "name": "firefox-build-link-plain",
  "description": "A basic add-on",
  "version": "0.0.6",
  "author": {
    "name": "sanemat",
    "email": "o.gata.ken@gmail.com",
    "url": "sane.jp"
  },
  "devDependencies": {
    "conventional-changelog": "^0.5.3",
    "cpy": "^4.0.0",
    "cross-spawn-async": "^2.1.8",
    "eclint": "^1.1.5",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^4.0.0",
    "fixpack": "^2.2.0",
    "globstar": "^1.0.0",
    "jpm": "^1.0.4",
    "mkdirp": "^0.5.1",
    "npm-check-updates": "^2.5.7",
    "pify": "^2.3.0",
    "rimraf": "^2.5.1",
    "yargs": "^3.32.0"
  },
  "engines": {
    "firefox": ">=38.0a1",
    "fennec": ">=38.0a1"
  },
  "keywords": [
    "jetpack"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": "dogwalk/firefox-build-link-plain",
  "scripts": {
    "build:addon": "npm run build:clean && npm run build:copy && npm run build:install && npm run build:xpi",
    "build:addon:signed": "npm run build:clean && npm run build:copy && npm run build:install && npm run build:xpi:signed",
    "build:clean": "bin/build-clean.js",
    "build:copy": "bin/build-copy.js",
    "build:install": "bin/build-install.js",
    "build:xpi": "bin/build-xpi.js",
    "build:xpi:signed": "bin/build-xpi-signed.js",
    "changelog": "conventional-changelog -i changelog.md --overwrite --preset angular",
    "eclint": "globstar --ignore \"node_modules/**\" -- eclint check \"*.{js,yml,md,json}\"",
    "eslint": "eslint --ext .js data test index.js bin",
    "fixpack": "fixpack",
    "git:tag": "git tag v${npm_package_version}",
    "lint": "npm run eclint && npm run eslint",
    "ncu": "ncu -u",
    "start": "jpm run",
    "test": "jpm test",
    "verify": "npm run lint && npm run test"
  },
  "title": "Build Link Plain"
}
